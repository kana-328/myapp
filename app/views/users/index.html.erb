<% provide(:title, '顧客一覧') %>
<section class="bs-docs-section">
  <button type="button" class="nav-link" data-toggle="modal" data-target="#exampleModalCenter">
    <span><i class="fas fa-search fa-2x"></i></span>
  </button>   
  <div class="row">
    <div class="col-lg-12">
      <div class="page-header">
        <%= render 'search_modal', search: @search %>
      </div>
      <div class="bs-component">
        <table class="table table-hover">
          <thead>
            <tr>
              <th scope="col">名前</th>
              <th scope="col">電話番号</th>
              <th scope="col">アドレス</th>
              <th scope="col">住所</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <th scope="row">
                  <%= link_to "#{user.firstname}"+" "+ "#{user.lastname}", user_pets_path(user_id: user.id) %>
                </th>
                <th><%= user.tel %></th>
                <th><%= user.email %></th>
                <th><%= user.address %></th>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class="paginate">
    <%= paginate @users %>
  </div>
  <%= link_to 'CSV出力', users_path(format: :csv), class: 'btn btn-primary md-3' %>
  <%= form_tag import_users_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "インポート" %>
<% end %>
</section>