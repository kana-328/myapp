<section class="bs-docs-section">
  <div class="row">
    <div class="col-lg-12">
      <div class="page-header">
        <%= render 'search_modal', search: @search %>
      </div>
      <div class="bs-component">
        <table class="table table-hover">
          <thead>
            <tr>
              <th scope="col">名前</th>
              <th scope="col">電話番号</th>
              <th scope="col">アドレス</th>
              <th scope="col">住所</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <th scope="row">
                  <%= link_to "#{user.firstname}"+" "+ "#{user.lastname}", user_pets_path(user_id: user.id) %>
                </th>
                <th><%= user.tel %></th>
                <th><%= user.email %></th>
                <th><%= user.address %></th>
              </tr>
            <% end %>
          </tbody>
        </table>
        
      </div>
    </div>
  </div>
  <div class="paginate">
    <%= paginate @users %>
  </div>
  <%= link_to 'エクスポート', users_path(format: :csv), class: 'btn btn-primaru md-3' %>
</section>