<section class="bs-docs-section">
  <div class="row">
    <div class="col-lg-12">
      <div class="page-header">
        <h2 id="tables">顧客一覧</h2>
        <div class="float-right">
          <%= link_to "顧客登録", signup_path, class: 'btn btn-secondary float-right .pr-1' %>
          <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#exampleModalCenter">
            <span><i class="fas fa-search float-right .pr-1"></i></span>
          </button>
        </div>
        <%= render 'search_modal', search: @search %>
      </div>
      <div class="bs-component">
        <table class="table table-hover">
          <thead>
            <tr>
              <th scope="col">名前</th>
              <th scope="col">住所</th>
              <th scope="col">電話番号</th>
              <th scope="col">アドレス</th>
              <th scope="col">ペット</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
              <th scope="row"><%= link_to "#{user.firstname}"+" "+ "#{user.lastname}", user_pets_path(user_id: user.pets.first.user_id) %></th>
                <th><%= user.address %></th>
                <th><%= user.tel %></th>
                <th><%= user.email %></th>
                <th><%= user.pets.first.name %></th>
              </tr>  
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>