<% provide(:title, '管理表') %>
<table class="table table-bordered">
  <tbody>
    <tr>
      <th scope="row">日付</th>
      <td><%= condition.recorded_date %>
    </tr>
    <tr>
      <th scope="row">時間</th>
      <td><%= condition.recorded_at %>
    </tr>
    <tr>
      <th scope="row">元気</th>
      <td><%= condition.vitality %>   
    </tr>    
    <tr>
      <th scope="row">食欲</th>
      <td><%= condition.appetite %>   
    </tr>                        
    <tr>
      <th scope="row">排便</th>
      <td><%= condition.defecation %>
    </tr>
    <tr>
      <th scope="row">排尿</th>
      <td><%= condition.urination %>
    </tr>
    <tr>
      <th scope="row">嘔吐</th>
      <td><%= condition.vomit %>
    </tr>
    <tr>
      <th scope="row">投薬</th>
      <td><%= condition.medicine %>
    </tr>
    <tr>
      <th scope="row">コメント</th>
      <td><%= condition.comment %>
    </tr>
    <tr>
      <th scope="row">スタッフ</th>
      <td><%= condition.staff %>
    </tr> 
  </tbody>
</table>
<%= link_to "削除", condition_path(id: condition.id),{ method: :delete, data: {"turbolinks" => false }, class: 'btn btn-outline-secondary'} %>
<%= link_to "編集", edit_condition_path(id: condition.id), data: {"turbolinks" => false }, class: 'btn btn-outline-secondary' %>