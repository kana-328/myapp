<div class="container">
<%= form_for(resource, as: resource_name, url: login_path) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="row justify-content-center">
    <div class="col-xl-10 col-lg-12 col-md-9">
      <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
          <div class="row">
            <div class="col-lg-2"></div>
            <div class="col-lg-8">
              <div class="p-5">
                <div class="text-center">
                  <h1 class="h4 text-gray-900 mb-4">ログイン</h1>
                </div>
                <div class="form-group">
                  <%= f.label :email, "メールアドレス" %>
                  <%= f.email_field :email, autofocus: true, autocomplete: "email",type: "email", 
                  class: "form-control form-control-user",id: "exampleInputEmail",
                  placeholder: "アドレスを入力", value: "example@email.com" %>
                </div>
                <div class="form-group">
                  <%= f.label :password, "パスワード" %>
                  <%= f.password_field :password, autocomplete: "current-password",type: "password", class: "form-control form-control-user", id: "exampleInputPassword", placeholder: "パスワード",value: "1234" %>
                </div>
                <div class="form-group">
                  <div class="custom-control custom-checkbox small">
                    <% if devise_mapping.rememberable? %>
                      <%= f.check_box :remember_me,type: "checkbox", class: "custom-control-input",
                      id: "customCheck" %>
                      <label class="custom-control-label" for="customCheck">パスワードを記憶する</label>
                    <% end %>
                  </div>
                </div>
                <%= f.submit "ログイン" , class: "btn btn-danger btn-user btn-block outline"%>
                <hr>
                <div class="text-center">
                  <%= render "devise/shared/links" %>
                </div>
                <hr>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
</div>