<div class="container">
  <h2 class="my-4"><%= @user.firstname %>さま</h2>
  <div class="row">
    <div class="col-md-7">
      <h3>名前:<%= @user.firstname %> <%= @user.lastname %></h3>
       <hr> 
      <h3>電話番号:<%= @user.tel %></h3>
       <hr> 
      <h3>住所:<%= @user.address %></h3>
       <hr> 
      <h3>アドレス:<%= @user.email %></h3>
    </div>
    <div class="col-md-5">
    <%= link_to "ペット追加登録", new_user_pet_path, class: 'btn btn-secondary' %>
    <hr> 
    <% @pets.each do |pet| %>
      <h3>名前:<%= link_to pet.name,"#" %></h3>
      <h4>種類:<%= pet.breed %></h4>
      <h4>性別:<%= pet.sex %></h4>
      <h4>生年月日:<%= pet.birthday %></h4>
      <%= link_to "ペット編集", edit_pet_path(id: pet.id), class: 'btn btn-outline-secondary' %>
      <hr> 
    <% end %>
    </div>
  </div>
</div>