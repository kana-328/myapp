<%= form_for reservation, url:  reservations_path(id: reservation.id)  do |f| %>
<div id='inputScheduleEditForm<%= reservation.id %>' class="modal fade" tabindex="-1">
  <div  class="col">
    <span>予約名</span>
    <span><%= f.select :title, {'ホテル':'ホテル' , '入院': '入院', 'しつけ': 'しつけ'} , { include_blank: '選択してください'}, { class: 'form-control form-control-user' , id: "exampleInputBreed" } %></span>
    <span>I N</span>
    <span><%= f.date_field  :start, placeholder: "XXXX-XX-XX", class:"field" %> ~ </span><br>
    <span>OUT</span>
    <span><%= f.date_field :end, placeholder: "XXXX-XX-XX", class:"field" %></span><br>
  </div>
  <div class="modal-footer">
    <%= f.submit "編集する", class: "btn btn-primary js-form" %>
  </div>
</div>
<% end %>

<div class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Modal body text goes here.</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>