<div class="container">
<h3 class="text-center">今日のお世話する子たち</h3>
  <div class="row">
<div class="line-it-button" data-lang="ja" data-type="share-a" data-ver="3" data-url="http://localhost:3000/reservations" data-color="default" data-size="large" data-count="false" style="display: none;"></div>
<script src="https://d.line-scdn.net/r/web/social-plugin/js/thirdparty/loader.min.js" async="async" defer="defer"></script>
<ul class="pets">
  <% @date.each do |reservation| %>
    <li>
      <div class="col">
        <%= link_to reservation.name, pet_path(id: reservation.pet_id) %>
        <%= reservation.title %>
        IN<%= reservation.start %> 〜OUT<%= reservation.end %>
      </div>
      <div class="col">
        <%= link_to '体重記入',new_pet_body_path(pet_id: reservation.pet_id), class: 'btn btn-info' %>
        <%= link_to "管理表記入", new_pet_condition_path(pet_id: reservation.pet_id),data: {"turbolinks" => false },  class: 'btn btn-success' %>
        <%= link_to "管理表", pet_conditions_path(pet_id: reservation.pet_id),  class: 'btn btn-primary' %>
      </div>
    </li>
  <% end %>
</ul>
</div>
</div>
<div id="calendar"></div>


<div id="calendarModal" class="modal fade">
  <div class="modal-dialog modal-dialog-center">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">
          <span aria-hidden="true">×</span>
           <%= link_to '削除',"#", class: 'btn btn-info' %>
          <span class="sr-only">close</span>
        </button>
        <span id="modalTitle" class="modal-title"></span>
      </div>
      <div id="modalBody" class="modal-body"></div>
     
      <div id="modalFooter" class="modal-footer"></div>
    </div>
  </div>
</div>